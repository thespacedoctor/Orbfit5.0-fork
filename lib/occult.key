! options file specific for occult_sim.x

occult.

!shape and position of the occulting disk
     .occ_a     REA       ! coefficient of X^2
     .occ_b     REA       ! coefficient of XY
     .occ_c     REA       ! coefficient of Y^2
     .occ_d     REA       ! displacement along Y
     .longax    REA       ! long semiaxis of ellipse
     .shortax   REA       ! short semiaxis of ellipse
     .anglong   REA       ! angle between X axis and long axis (degrees)

!times of the occultations
     .occ_v     REA       ! relative velocity in star radius/day
     .occ_t0    REA       ! reference time (occulter at center)
     .occ_dt    REA       ! time step for luminosity measurement

! limb darkening parameters: limb_dark=1-limb1*(1-cosf) +limb2*(1-cosf)**2
     .limb1     REA       ! linear term; Sun=-0.47
     .limb2     REA       ! quadratic term; Sun= -0.23
! if set to zero: no limb darkening

! numerical accuracy 
     .npo       INT       ! number of sample points inside the disk

